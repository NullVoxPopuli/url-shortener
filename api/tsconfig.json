{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "sourceMap": true,

    // Compat
    "allowJs": true,
    "checkJs": true,
    "allowImportingTsExtensions": true,

    // Be less annoying
    "noEmitOnError": false,

    // Stylistic
    "noPropertyAccessFromIndexSignature": false
  }
}
